<Window x:Class="ShulteTestAutomation.Views.AllResultsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Все результаты тестирования" 
        Height="800" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="300"/>
            <!-- Для детального просмотра -->
        </Grid.RowDefinitions>

        <!-- Заголовок и фильтры -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Все результаты тестирования" 
                       FontSize="18" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal">
                <Button Content="Обновить" Click="Refresh_Click" Margin="0,0,10,0"/>
                <Button Content="Экспорт в CSV" Click="ExportToCsv_Click" 
                        Margin="0,0,10,0" Background="#4CAF50" Foreground="White"/>
                <Button Content="Показать статистику" Click="ShowStatistics_Click" Margin="0,0,10,0"/>
                <Button Content="Удалить выбранные" Click="DeleteSelected_Click" Margin="0,0,10,0" Background="Red" Foreground="White"/>
                <Button Content="Детальный просмотр" Click="ShowDetailedView_Click" Margin="0,0,10,0" Background="#2196F3" Foreground="White"/>
            </StackPanel>
        </StackPanel>

        <!-- Список всех сессий -->
        <ListView Grid.Row="1" x:Name="AllSessionsListView" SelectionMode="Extended" SelectionChanged="AllSessionsListView_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Дата" Width="120" 
                                    DisplayMemberBinding="{Binding StartTime, StringFormat={}{0:dd.MM.yyyy HH:mm}}"/>
                    <GridViewColumn Header="Испытуемый" Width="150" 
                                    DisplayMemberBinding="{Binding SubjectName}"/>
                    <GridViewColumn Header="Возраст" Width="60" 
                                    DisplayMemberBinding="{Binding SubjectAge}"/>
                    <GridViewColumn Header="Размер" Width="60" 
                                    DisplayMemberBinding="{Binding Configuration.TableSize}"/>
                    <GridViewColumn Header="Последовательность" Width="120" 
                                    DisplayMemberBinding="{Binding Configuration.SequenceType}"/>
                    <GridViewColumn Header="ER" Width="70" 
                                    DisplayMemberBinding="{Binding Results.EfficiencyRate, StringFormat={}{0:F2}}"/>
                    <GridViewColumn Header="BP" Width="70" 
                                    DisplayMemberBinding="{Binding Results.WorkabilityIndex, StringFormat={}{0:F2}}"/>
                    <GridViewColumn Header="IN" Width="70" 
                                    DisplayMemberBinding="{Binding Results.StabilityIndex, StringFormat={}{0:F2}}"/>
                    <GridViewColumn Header="Ошибки" Width="70" 
                                    DisplayMemberBinding="{Binding Results.TotalErrors}"/>
                    <GridViewColumn Header="Общее время" Width="100" 
                                    DisplayMemberBinding="{Binding Results.TotalTime, StringFormat={}{0:F2} сек.}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Статистика -->
        <GroupBox Grid.Row="2" Header="Статистика" Margin="0,10,0,0">
            <ScrollViewer MaxHeight="150" VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="StatisticsPanel">
                    <TextBlock Text="Выберите сессии для просмотра статистики или нажмите 'Показать статистику' для общей статистики" 
                               FontStyle="Italic" TextWrapping="Wrap"/>
                </StackPanel>
            </ScrollViewer>
        </GroupBox>

        <!-- Детальный просмотр выбранной сессии -->
        <GroupBox Grid.Row="3" Header="Детальный просмотр выбранной сессии" Margin="0,10,0,0">
            <TabControl>
                <TabItem Header="Общая информация">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="SessionDetailsPanel" Margin="10">
                            <TextBlock Text="Выберите сессию для просмотра деталей" FontStyle="Italic"/>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <TabItem Header="График утомляемости">
                    <Canvas x:Name="FatigueChart" Background="White" Margin="10"
                            SizeChanged="FatigueChart_SizeChanged">
                        <TextBlock x:Name="NoChartText" Text="Выберите сессию для отображения графика" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center" FontStyle="Italic"/>
                    </Canvas>
                </TabItem>

                <TabItem Header="Подробные результаты">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="DetailedResultsPanel" Margin="10">
                            <TextBlock Text="Выберите сессию для просмотра подробных результатов" FontStyle="Italic"/>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>
            </TabControl>
        </GroupBox>
    </Grid>
</Window>