<Window x:Class="ShulteTestAutomation.Views.SubjectEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование испытуемого" 
        Height="500" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Данные испытуемого" 
                   FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Вкладки -->
        <TabControl Grid.Row="1">
            <!-- Основная информация -->
            <TabItem Header="Основная информация">
                <StackPanel Margin="10">
                    <TextBlock Text="ФИО *" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox x:Name="NameTextBox" Margin="0,0,0,15"/>

                    <TextBlock Text="Возраст" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox x:Name="AgeTextBox" Margin="0,0,0,15"/>

                    <TextBlock Text="Пол" FontWeight="Bold" Margin="0,0,0,5"/>
                    <ComboBox x:Name="GenderComboBox" Margin="0,0,0,15">
                        <ComboBoxItem Content="Не указан"/>
                        <ComboBoxItem Content="Мужской"/>
                        <ComboBoxItem Content="Женский"/>
                    </ComboBox>

                    <TextBlock Text="Примечания" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox x:Name="NotesTextBox" Height="80" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
                </StackPanel>
            </TabItem>

            <!-- Настройки теста -->
            <TabItem Header="Настройки теста" x:Name="TestSettingsTab">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <CheckBox x:Name="UseCustomSettingsCheckBox" Content="Использовать индивидуальные настройки теста" 
                                  Checked="UseCustomSettingsCheckBox_Changed" Unchecked="UseCustomSettingsCheckBox_Changed"/>

                        <StackPanel x:Name="CustomSettingsPanel" Margin="20,10,0,0" Visibility="Collapsed">
                            <!-- Размер поля -->
                            <GroupBox Header="Размер поля (N)" Margin="0,0,0,10">
                                <StackPanel>
                                    <ComboBox x:Name="TableSizeComboBox" SelectedIndex="2">
                                        <ComboBoxItem Content="3 (3x3, числа 1-9)"/>
                                        <ComboBoxItem Content="4 (4x4, числа 1-16)"/>
                                        <ComboBoxItem Content="5 (5x5, числа 1-25)" IsSelected="True"/>
                                        <ComboBoxItem Content="6 (6x6, числа 1-36)"/>
                                        <ComboBoxItem Content="7 (7x7, числа 1-49)"/>
                                        <ComboBoxItem Content="8 (8x8, числа 1-64)"/>
                                        <ComboBoxItem Content="9 (9x9, числа 1-81)"/>
                                        <ComboBoxItem Content="10 (10x10, числа 1-100)"/>
                                    </ComboBox>
                                </StackPanel>
                            </GroupBox>

                            <!-- Последовательность обхода -->
                            <GroupBox Header="Последовательность обхода" Margin="0,0,0,10">
                                <StackPanel>
                                    <RadioButton x:Name="AscendingRadio" Content="Последовательное возрастание (1, 2, 3, ...)" IsChecked="True"/>
                                    <RadioButton x:Name="DescendingRadio" Content="Последовательное убывание (N², N²-1, ...)"/>
                                    <RadioButton x:Name="RandomRadio" Content="Случайная последовательность"/>
                                </StackPanel>
                            </GroupBox>

                            <!-- Режим перемешивания -->
                            <GroupBox Header="Режим перемешивания" Margin="0,0,0,10">
                                <StackPanel>
                                    <CheckBox x:Name="ShuffleCheckBox" Content="Перемешивать после каждого шага"/>
                                    <TextBlock Text="Если включено, после каждого правильного нажатия оставшиеся числа меняют позиции" 
                                               FontStyle="Italic" Margin="20,5,0,0" TextWrapping="Wrap"/>
                                </StackPanel>
                            </GroupBox>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Сохранить" Click="Save_Click" Margin="5" Width="100" Background="#4CAF50" Foreground="White"/>
            <Button Content="Отмена" Click="Cancel_Click" Margin="5" Width="100"/>
        </StackPanel>
    </Grid>
</Window>