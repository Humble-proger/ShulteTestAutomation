<Window x:Class="ShulteTestAutomation.Views.CredentialsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Данные для входа" 
        Height="300" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Данные для входа созданы" 
                   FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Информация -->
        <StackPanel Grid.Row="1">
            <TextBlock Text="Для испытуемого:" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBlock x:Name="SubjectNameText" FontSize="14" Margin="0,0,0,15"/>

            <TextBlock Text="Логин:" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox x:Name="UsernameTextBox" FontSize="14" IsReadOnly="True" Background="LightGray" Margin="0,0,0,15"/>

            <TextBlock Text="Пароль:" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox x:Name="PasswordTextBox" FontSize="14" IsReadOnly="True" Background="LightGray" Margin="0,0,0,15"/>

            <TextBlock Text="Сохраните эти данные! Они больше не будут показаны." 
                       FontStyle="Italic" Foreground="Red" TextWrapping="Wrap"/>
        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Скопировать логин" Click="CopyUsername_Click" Margin="5" Width="120"/>
            <Button Content="Скопировать пароль" Click="CopyPassword_Click" Margin="5" Width="120"/>
            <Button Content="OK" Click="OK_Click" Margin="5" Width="80" Background="#4CAF50" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>