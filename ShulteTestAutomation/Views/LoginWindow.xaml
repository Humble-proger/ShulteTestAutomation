<Window x:Class="ShulteTestAutomation.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация - Методика Шульте" 
        Height="350" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Авторизация" 
                   FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,30"/>

        <!-- Форма входа -->
        <StackPanel Grid.Row="1">
            <TextBlock Text="Имя пользователя" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox x:Name="UsernameTextBox" FontSize="14" Margin="0,0,0,15"/>

            <TextBlock Text="Пароль" FontWeight="Bold" Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox" FontSize="14" Margin="0,0,0,20"/>

            <TextBlock x:Name="ErrorText" Foreground="Red" TextWrapping="Wrap" 
                       Visibility="Collapsed" Margin="0,0,0,10"/>
        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Войти" Click="Login_Click" Margin="5" Width="100" 
                    Background="#4CAF50" Foreground="White" FontWeight="Bold"/>
            <Button Content="Выход" Click="Exit_Click" Margin="5" Width="100"/>
        </StackPanel>
    </Grid>
</Window>